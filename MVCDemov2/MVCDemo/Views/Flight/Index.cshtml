@model IEnumerable<MVCDemo.Models.Flight>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aircraft.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pilot.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartingAirport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivingAirport)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Aircraft.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pilot.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartingAirport)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArrivingAirport)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FlightID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FlightID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FlightID })
        </td>
    </tr>
}

</table>
